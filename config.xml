<?xml version='1.0' encoding='utf-8'?>
<widget id="com.omahagirlswhocode.t-hinker" version="1.0.0" xmlns="http://omahagirlswhocode.com" xmlns:cdv="https://github.com/OmahaGirlsWhoCode/t-h-inker.git">
    <name>t{h}inker</name>
    <description>
        T(h)inker is an Android app that provides an outlet for students suffering ADD/ADHD and anxiety through color stimulation and (optional) calming vibrations through their phones. This app can be used during lesson without being a distraction for students and teachers.
    </description>
    <author email="omahagirlswhocode@gmail.com" href="http://omahagirlswhocode.com">
        Omaha Girls Who Code | High School Class
    </author>
    <content src="index.html" />

    <plugin name="cordova-plugin-splashscreen" spec="4.0.0" />
    <plugin name="cordova-plugin-vibration" spec="2.1.2" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.0" />
    <access origin="http://omahagirlswhocode.com" />
    <allow-intent href="mailto:omahagirlswhocode@gmail.com" />


    <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/screen-72x72.png" density="land-hdpi"/>
        <splash src="res/screen/android/screen-32x32.png" density="land-ldpi"/>
        <splash src="res/screen/android/screen-57x57.png" density="land-mdpi"/>
        <splash src="res/screen/android/screen-96x96.png" density="land-xhdpi"/>

        <splash src="res/screen/android/screen-72x72.png" density="port-hdpi"/>
        <splash src="res/screen/android/screen-32x32.png" density="port-ldpi"/>
        <splash src="res/screen/android/screen-57x57.png" density="port-mdpi"/>
        <splash src="res/screen/android/sscreen-96x96.png" density="port-xhdpi"/>
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
</widget>
