<?xml version='1.0' encoding='utf-8'?>
<widget id="com.omahagirlswhocode.t-hinker" version="1.0.0" xmlns="http://omahagirlswhocode.com" xmlns:cdv="https://github.com/OmahaGirlsWhoCode/t-h-inker.git">


    <name>t{h}inker</name>
    <description>
        T(h)inker is an Android app that provides an outlet for students suffering ADD/ADHD and anxiety through color stimulation and (optional) calming vibrations through their phones. This app can be used during lesson without being a distraction for students and teachers.
    </description>
    <author email="omahagirlswhocode@gmail.com" href="http://omahagirlswhocode.com">
        Omaha Girls Who Code | High School Class
    </author>
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <content src="index.html" />
    <access origin="http://omahagirlswhocode.com" />
    <allow-intent href="mailto:omahagirlswhocode@gmail.com" />
    <icon density="hdpi" src="res/screen/android/screen-72x72.png" />
    <icon density="ldpi" src="res/screen/android/screen-32x32.png" />
    <icon density="mdpi" src="res/screen/android/screen-57x57.png" />
    <icon density="xhdpi" src="res/screen/android/screen-96x96.png" />
    <splash density="land-hdpi" src="res/screen/android/screen-72x72.png" />
    <splash density="land-ldpi" src="res/screen/android/screen-32x32.png" />
    <splash density="land-mdpi" src="res/screen/android/screen-57x57.png" />
    <splash density="land-xhdpi" src="res/screen/android/screen-96x96.png" />
    <splash density="port-hdpi" src="res/screen/android/screen-72x72.png" />
    <splash density="port-ldpi" src="res/screen/android/screen-32x32.png" />
    <splash density="port-mdpi" src="res/screen/android/screen-57x57.png" />
    <splash density="port-xhdpi" src="res/screen/android/screen-96x96.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
</widget>
